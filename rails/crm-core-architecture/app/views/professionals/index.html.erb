<style>
    hr {
        height: 2px;
        background-color: #5fbeaa;
    }
</style>
<div class="card-box">
    <div>
        <% if current_user.can_do?("database_edit") %>
            <%= link_to new_professional_path,
                class: "btn btn-dark_green waves-effect waves-light",
                target: "_blank" do  %>
                <span class="btn-label"><i class="fa fa-user-plus"></i>
                </span><%= I18n.t("buttons.new_professional") %>
            <% end %>
        <% end %>
    </div>
    <br>
    <%= simple_form_for :search, url: index_search_professionals_path do |f| %>
        <label><%= I18n.t("label_institutions.search_tips") %></label>
        <div class="row">
            <div class="col-2">
                <label><%= I18n.t("label_professionals.onepharma_id") %></label>
                <%= f.input :customer_id, as: :string,input_html: { oninput: 'this.value = this.value.replace(/[^0-9]/g, "")' }, label: false  %>
                <hr style="color:#5fbeaa;">
            </div>
            <div class="col-2" style="border-left: 3px solid #5fbeaa;">
                <label><%= I18n.t("label_professionals.professional_number") %></label>
                <%= f.input :num_ordem, as: :string, label: false  %>
                <hr style="color:#5fbeaa;">
            </div>
            <div class="col-8"></div>
        </div>
        <div class="row">
            <div class="col-3">
               <label><%= I18n.t("label_professionals.full_name") %></label>
                <%= f.input :full_name, as: :string, label: false  %>
            </div>
            <div class="col-3">
                <label><%= I18n.t("label_specialties.specialty") %></label>
                <%= f.input :specialty, as: :select, collection: @specialties_list_for_select, label: false, input_html: { data: { controller: "select2"}, style:"height: 35px !important;" } %>
            </div>
            <div class="col-6"></div>
        </div>
        <div class="row">
            <div class="col-3">

            </div>
            <div class="col-2"></div>
            <div class="col-7"></div>
        </div>
        <br>
        <div class="row">
            <div class="col-12 d-flex" style="justify-content: center;">
                <div style="margin-right: 20px;">
                    <%= button_tag type: "submit", class: "btn btn-dark_green waves-effect waves-light" do  %>
                        <span class="btn-label"><i class="fa-solid fa-magnifying-glass"></i>
                        </span><%= I18n.t("buttons.search") %>
                    <% end %>
                </div>
                <div>
                    <%= link_to professionals_path, class: 'btn btn-dark_danger' do %>
                        <span class="fa-solid fa-ban"></span>
                        </span><%= I18n.t("buttons.clear_filters") %>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
    <hr>
    <br>
    <br>
    <%= render 'professionals/index_search_table' %>
</div>
