<h4> <%= I18n.t("label_contacts.contacts") %> </h4>
<div class="row" data-controller="formtoggle">
    <div class="col-12">
        <% if current_user.can_do?("database_edit") %>
            <div data-formtoggle-target="hideable" class="form-group ">
                <button  data-action="formtoggle#toggleTargets" id="add_department" class="btn btn-dark_green waves-effect waves-light hideable" do  >
                <span class="btn-label">
                    <i class="fa-solid fa-plus-large"></i>
                </span>
                    <%= I18n.t("label_contacts.new_contact") %>
                </button>
            </div>
        <% end %>
        <div data-formtoggle-target="hideable" hidden>
            <%= simple_form_for @new_contact, url: professional_contacts_path(@professional.CUSTOMER_ID) do |f| %>
                <%= render "contacts/form", f: f %>
            <% end %>
        </div>
        <hr>
        <div id="professional_contact_list">
            <table class="border table table-striped table-bordered no-footer" cellspacing="0" role="grid" data-controller="" aria-describedby="datatable-buttons_info">
                <thead>
                    <tr>
                        <th> <%= I18n.t("label_contacts.type") %> </th>
                        <th> <%= I18n.t("label_contacts.description") %> </th>
                        <% if current_user.can_do?("database_edit") %>
                            <th></th>
                        <% end %>
                    </tr>
                </thead>
                <tbody id="contacts" >
                    <% @professional.contacts.each do |elem| %>
                        <%= render "professionals/contact_table_line", elem: elem %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
