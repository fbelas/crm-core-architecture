<div id="<%= dom_id(@professional) %>">
    <%= simple_form_for @professional, url: professionals_path, data: {turbo: "false"}, html: { onsubmit: "disableSubmitButton(this)" } do |f| %>
        <div class="card-box">
            <div class="row">
                <div class="col-md-8">
                    <div>
                        <h4> <%= I18n.t("label_professionals.new_professional")%> </h4>
                    </div>
                    <hr>
                </div>
                <div class="col-md-4">
                    <h5>
                        <div class="center <%= @professional.STATUS == 'ACTV'? "label-regular_green" : "label-light_dark_danger" %>">
                            <%= I18n.t("label_professionals.#{@professional.STATUS}") %>
                        </div>
                    </h5>
                    <div style="text-align: center;">
                        <h6></h6>
                    </div>
                </div>
                <hr>
            </div>
            <div class="row">
                <div class="col-md-6"></div>
                <div class="col-md-6"></div>
            </div>
            <%= render 'professionals/form', f: f %>
            <br>
            <%= render 'professionals/new_professional_details', f: f %>
            <br>
            <%#= render 'institutions/address_zones'%>
            <%= render 'specialties/form_new_professional', f: f %>
            <div class="form-group text-center m-t-40">
                <div class="col-12">
                    <button class="btn btn-dark_green btn-block waves-effect waves-light" type="submit" style="width:300px;"><%= I18n.t("buttons.save") %></button>
                </div>
            </div>
        </div>

    <% end %>
</div>

<script>

    function disableSubmitButton(form) {
        const button = form.querySelector("button[type='submit']");
        if (button) {
            button.disabled = true;
        }
    }

</script>
